begin: data;
        problem: initial value;	# the default
end: data;

begin: initial value;
        initial time: 0.;
        final time: 10;
        time step: 1e-3;

        max iterations: 100;
        tolerance: 1e-2;
        method: implicit euler;

        linear solver: siconos dense;
        nonlinear solver: siconos mcp, lambda min, 1e-10;

    derivatives tolerance: 1e-5;
    derivatives max iterations: 20;
    derivatives coefficient: 1;
    threads: assembly, 1;
    threads: solver, 1;
    output: iterations;
end: initial value;

begin: control data;
       print: dof description;
    use automatic differentiation;
    output meter: closest next, 0, forever, const, 1e-3;
    default output: all;
    loadable elements: 1;
    abstract nodes: 2;
    genels: 2;
    forces: 1;
end: control data;

begin: nodes;
    abstract: 1, differential, value, 0., derivative, 0.;
    abstract: 2, differential, value, 0., derivative, 0.;
end: nodes;

begin: elements;
    module load: "libmodule-mcp_test1.la";

    user defined: 1, mcp test1,
    100., 1e3, 0., 1e6,
    100., 1e6, 0., 0.,
    output, yes;

    genel: 1, spring,
        1, abstract, algebraic,
        2, abstract, algebraic,
        linear elastic generic, 1e8;

    genel: 2, clamp,
           1, abstract, algebraic, 0.;

    force: 1, abstract, 2, abstract,
           mult, time, 1e5;

end: elements;
