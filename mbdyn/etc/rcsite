CXXFLAGS=$CFLAGS
CC=gcc
CXX=g++
F77="g77 -O"

# -rdynamic required to allow dynamic resolution of symbols in modules
LDFLAGS="-rdynamic \
	-L/home/masarati/Math/Meschach/meschach \
	-L/home/masarati/Math/mpich-1.2/lib \
	-L/home/masarati/Math/metis-4.0 \
	-L/home/masarati/Math/clapack/CLAPACK"

export CPPFLAGS CFLAGS CXXFLAGS LDFLAGS CC CXX F77 LDFLAGS

