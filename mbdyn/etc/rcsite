# Tailor to your machine if you installed any package in uncommon way

CPPFLAGS="-I/home/masarati/Math/Meschach \
	-I/usr/share/mpi/include -I/usr/share/mpi/include/c++ \
	-I/home/masarati/Math/metis-4.0/Lib \
	-DHAVE_LOADABLE \
	-D__HACK_EIG__ \
	-D__HACK_UNSTEADY_AERO__ \
	-D__HACK_NASTRAN_MODES__=2"
CFLAGS="-g -Wall -O6 -march=pentiumpro"
CXXFLAGS=$CFLAGS
CC=gcc
CXX=g++
F77="g77 -O"

# -rdynamic required to allow dynamic resolution of symbols in modules
LDFLAGS="-rdynamic \
	-L/home/masarati/Math/Meschach/meschach \
	-L/usr/share/mpi/lib \
	-L/home/masarati/Math/metis-4.0 \
	-L/home/masarati/Math/clapack/CLAPACK"

export CPPFLAGS CFLAGS CXXFLAGS LDFLAGS CC CXX F77 LDFLAGS

